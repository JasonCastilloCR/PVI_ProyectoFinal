@*@model List<JCO_ProyectoFinal.Models.ModelCasa>
    @{
        ViewBag.Title = "Index";
    }*@
@if (ViewBag.TipoPersona == "Empleado") { 
    <div class="casasContainer">
        <h2 class="ttlGestionCasas">Administración de Casas</h2>

        @Html.ActionLink("Crear Casa", "CrearCasa", "Casas", null, new { @class = "btn btn-success" })

        <table id="table-general" class="table table-bordered table-hover tablaCasas">
            <tr>
                <th>Id</th>
                <th>Nombre de la Casa</th>
                <th>Metros Cuadrados</th>
                <th>Número de Habitaciones</th>
                <th>Número de Baños</th>
                <th>Fecha Construccion</th>
                <th>Propietario</th>
                <th>Estado</th>

                <th>Acciones</th>

            </tr>
            @{
                foreach (var casa in this.Model)
                {
                    <tr>
                        <td>@casa.IdCasa</td>
                        <td>@casa.NombreCasa</td>
                        <td>@casa.MetrosCuadrados</td>
                        <td>@casa.NumeroHabitaciones</td>
                        <td>@casa.NumeroBanos</td>
                        <td>@casa.FechaConstruccion</td>
                        <td>@casa.IdPersona</td> 
                        <td>@(casa.Estado ? "Activo" : "Inactivo")</td>

                        <td>
                            @Html.ActionLink("Modificar", "CrearCasa", "Casas", new { id = casa.IdCasa }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    }

